{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "checkJs": true,                 // Enables type checking in JS files
    "allowJs": true,                 // Allow JS files in the project
    "moduleResolution": "node",     // Resolves modules like Node.js
    "baseUrl": ".",                 // Enables absolute imports relative to root
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": ["tests", "pages", "utils", "fixtures", "playwright.config.js"]
}


